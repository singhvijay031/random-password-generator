{
    "projects": [
      {
        "name": "random-password-generator-client",
        "root": "client",
        "framework": "create vite@latest",
        "buildCommand": "npm run build",
        "outputDirectory": "build",
        "devCommand": "npm run dev"
      },
      {
        "name": "random-password-generator-server",
        "root": "server",
        "framework": "node",
        "buildCommand": "",
        "outputDirectory": "",
        "devCommand": "node index.js"
      }
    ],
    "builds": [
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/api/generate-password.js"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
  }
  